<Window x:Class="PruductApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruductApp"
        mc:Ignorable="d"
        Title="ProductApp" Height="500" Width="500">
    <Grid>
        <StackPanel Margin="50">
            <Button x:Name="btn_CreateNewCostumer" Content="New costumer" Margin="20"/>
            <Button x:Name="btn_CreateNewProduct" Content="New Product" Margin="20"/>
            <ComboBox Name="Products" Margin="20"/>
            <Button x:Name="btn_AddProductToChart" Content="Add to chart" Margin="20"/>
            <ComboBox Name="Customer" DisplayMemberPath="Key" Margin="20"/>
            <Button x:Name="btn_MakeOrder" Content="CompleteOrder" Margin="20"/>
        </StackPanel>
        
    </Grid>
</Window>
